generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Subscription {
  id            Int      @id @default(autoincrement())
  email         String
  plate         String
  state         String
  createdAt     DateTime @default(now())
  lastCheckedAt DateTime?
}

model Ticket {
  id            Int      @id @default(autoincrement())
  summonsNumber String   @unique
  plate         String
  state         String
  issueDate     String
  violation     String
  fineAmount    Float
  createdAt     DateTime @default(now())
}
